generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model CVEYear {
  id    Int    @id @default(autoincrement())
  year  Int    @unique
  notes String
  products CVEProduct[]
}

model CVEProduct {
  id    Int    @id @default(autoincrement())
  productName  String
  productVersion  String 
  notes String
  cveYear CVEYear @relation(fields: [cveYearId], references: [id])
  cveYearId Int
  state String
  cves CVE[]
}

model CVE {
  id    Int    @id @default(autoincrement())
  cveId  String
  cveProduct  CVEProduct @relation(fields: [cveProductId], references: [id])
  cveProductId Int
  vulnName String
  vulnDescription String
  vulnSeverity String
  vulnNotes String
  vulnState String
  pubURLs String
}